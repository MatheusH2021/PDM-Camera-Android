<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsContainer" />

    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <Button
            android:id="@+id/buttonRotateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotacionar Direita" />

        <Button
            android:id="@+id/buttonRotateLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotacionar Esquerda" />

        <Button
            android:id="@+id/buttonGrayScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escala de Cinza" />

        <Button
            android:id="@+id/buttonInvertColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inverter Cores" />

        <Button
            android:id="@+id/buttonSaveImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar Imagem" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
